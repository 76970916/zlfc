<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/red_btn_pressed" />
            <corners android:radius="4.0dip" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/red_btn_disable" />
            <corners android:radius="4.0dip" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/red_btn_normal" />
            <corners android:radius="4.0dip" />
        </shape>
    </item>
</selector>