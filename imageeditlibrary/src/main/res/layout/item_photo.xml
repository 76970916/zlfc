<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">
  <FrameLayout
      android:paddingTop="3dp"
      android:paddingBottom="3dp"
      android:paddingLeft="3dp"
      android:paddingRight="3dp"
      android:layout_width="90dp"
      android:layout_height="90dp">
      <RelativeLayout
          android:id="@+id/relatvie_normal"
          android:visibility="gone"
          android:background="@color/normal_photo"
          android:layout_width="match_parent"
          android:layout_height="match_parent">
          <ImageView
              android:layout_centerInParent="true"
              android:visibility="gone"
              android:scaleType="centerCrop"
              android:id="@+id/normal_photo"
              android:layout_width="25dp"
              android:layout_height="25dp">
          </ImageView>
      </RelativeLayout>
      <ImageView
          android:scaleType="centerCrop"
          android:id="@+id/list_photo"
          android:layout_width="match_parent"
          android:layout_height="match_parent">
      </ImageView>
      <RelativeLayout
          android:visibility="gone"
          android:id="@+id/relative_bg"
          android:background="@drawable/border_photo_blue"
          android:layout_width="match_parent"
          android:layout_height="match_parent">
      </RelativeLayout>
      <RelativeLayout
          android:id="@+id/image_Tag"
          android:visibility="gone"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">
      </RelativeLayout>
  </FrameLayout>
</LinearLayout>